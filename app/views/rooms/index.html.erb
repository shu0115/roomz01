<h1>Listing rooms</h1>

<table>
  <tr>
    <th>User</th>
    <th>Name</th>
    <th>Hash tag</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.user_id %></td>
    <td><%= room.name %></td>
    <td><%= room.hash_tag %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

