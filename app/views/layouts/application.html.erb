<!DOCTYPE html>
<html>
<head>
  <title>Roomz01</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  <%# ログイン済み %>
  <%= current_user.get_name %>
  : <%= link_to "Top" , :root %>
  : <%= link_to "Room" , controller: "rooms" %>
  : <%= link_to "Logout" , logout_path %>
<% else %>
  <%# 未ログイン %>
  <%= link_to "Login", "/auth/#{DEFAULT_PROVIDER}" %>
<% end %>

<%= yield %>

</body>
</html>
